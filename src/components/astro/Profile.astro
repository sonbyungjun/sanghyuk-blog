---
// Profile component - displays author info and social links
---

<div class="mt-20 flex flex-col justify-center items-center">
  <!-- Profile Image -->
  <div
    class="flex justify-center items-end w-[120px] h-[120px] relative overflow-hidden bg-stone-100 object-cover rounded-full dark:shadow-[0_0_0_5px_#ffffff]"
    style="isolation: isolate"
  >
    <div class="rounded-full w-[100px] scale-[2]">
      <img
        draggable="false"
        src="/profile.webp"
        alt="profile"
        class="w-full h-full object-cover"
      />
    </div>
  </div>

  <!-- Name -->
  <div class="mt-5">
    <span class="font-medium text-base">손상혁.</span>
  </div>

  <!-- Legend -->
  <div class="flex flex-col mt-1.5">
    <!-- Managed -->
    <div class="flex gap-1.5 items-center">
      <div class="rounded-full w-2 h-2 bg-green-400"></div>
      <span class="text-[10px] text-green-500">Currently Managed</span>
    </div>

    <!-- Currently not managed -->
    <div class="flex gap-1.5 items-center">
      <div class="rounded-full w-2 h-2 bg-gray-400"></div>
      <span class="text-[10px] text-gray-500">Currently not managed</span>
    </div>
  </div>

  <!-- Social Links -->
  <div class="flex gap-2.5 mt-2.5 items-center">
    <!-- Github -->
    <a
      href="https://github.com/sonbyungjun"
      target="_blank"
      rel="noopener noreferrer"
      class="icon-box"
      title="Github"
      data-managed="true"
    >
